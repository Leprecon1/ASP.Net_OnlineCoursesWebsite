@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
<br />
<br />
<br />
<br />
<h2>Список ролей</h2>
<table class="table">
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Name</td>
            <td>
                <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Удалить
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
<a class="nav-link" asp-action="Create" asp-controller="Roles">Добавить роль</a>
<a class="nav-link" asp-action="UserList" asp-controller="Roles">Список пользователей</a>