

@*CKEDITOR*@
<script src="~/ckeditor/ckeditor.js"></script>

<!DOCTYPE html>
<html>
<head>
    <title>Добавление онлайн курса</title>

</head>
<body>
    <div>

        <h3>Добавление онлайн курса</h3>
        <p>Для добавление публикации заполните следующие поля:</p>

        <form asp-action="AddCourse" asp-controller="Course" method="post" enctype="multipart/form-data">
            <input type="hidden" name="id" value="0" />

            <div class="form-group col-md-15">
                <input class="form-control" type="text" name="Name" placeholder="Название курса" />
            </div>

            <div class="form-group col-md-15">
                <input class="form-control" type="text" name="AuthorName" placeholder="Автор курса" />
            </div>

            <div class="form-group col-md-15">
                <input class="form-control" type="number" name="TotalTime" placeholder="Количество часов" />
            </div>

            <div class="form-group col-md-15">
                <input class="form-control" type="datetime-local" name="Date" placeholder="Дата" />
            </div>

            <div class="form-group col-md-15">
                <input class="form-control" type="number" name="Periodicity" placeholder="Переодичность" />
            </div>

            <div class="form-group col-md-15">
                <input class="form-control" type="number" name="Price" placeholder="Цена" />
            </div>



            <div class="form-group  col-md-15">
                <textarea class="form-control" rows="3" type="text" name="ShortDescription" placeholder="Короткое описание"></textarea>
            </div>

            <div class="form-group col-md-15">
                <textarea name="MainDescription" id="MainDescription" rows="10" cols="80"></textarea>
            </div>

            <div class="form-group col-md-15">
                <div>
                    <select name="TeacherName">
                        <option>Выбирете преподователя</option>
                        <option value="Mated Nithan">Mated Nithan</option>
                        <option value="David Cameron">David Cameron</option>
                        <option value="Jain Redmel">Jain Redmel</option>
                        <option value="Nathan Macken">Nathan Macken</option>
                    </select>
                    <div class="select-arrow"></div>
                </div>
            </div>

            <div class="form-group col-md-15">
                <div>
                    <select name="Category">
                        <option>Выбирете категорию</option>
                        <option value="Data Science">Data Science</option>
                        <option value="Programming">Programming</option>
                        <option value="Testing">Testing</option>
                        <option value="Web Development">Web Development</option>
                        <option value="Game">Game</option>
                    </select>
                    <div class="select-arrow"></div>
                </div>

            </div>

            <div class="form-group  col-md-15">
                <input name="Image" type="file" class="form-control" />
            </div>

            <div class="checkbox">
                <label><input type="checkbox" name="Availability" value="true"> Доступность</label>
            </div>

            <div class="checkbox">
                <label><input type="checkbox" name="MonthCourse" value="true"> Курс месяца</label>
            </div>

            <div class="panel-body">
                <button type="submit" id="submit" style="width:1600px;"
                        class="btn btn-success"
                        back>
                    Отправить
                </button>
            </div>


        </form>
    </div>

    <script>
        CKEDITOR.replace('MainDescription');
    </script>

</body>
</html>