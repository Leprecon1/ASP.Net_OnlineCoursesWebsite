@*CKEDITOR*@
<script src="~/ckeditor/ckeditor.js"></script>

<!DOCTYPE html>
<html>
<head>
    <title>Добавление события</title>
</head>
<body>
    <div>
        <h3>Добавление события</h3>
        <p>Для добавление События заполните следующие поля:</p>

        <form asp-action="AddEvent" asp-controller="Events" method="post" enctype="multipart/form-data">
            <input type="hidden" name="id" value="0" />

            <div class="form-group col-md-15">
                <input class="form-control" type="text" name="Name" placeholder="Название события" />
            </div>

            <div class="form-group col-md-15">
                <input class="form-control " type="datetime-local" name="Date" placeholder="Дата события" />
            </div>

            <div class="form-group col-md-15">
                <input class="form-control" type="text" name="Location" placeholder="Место проведения" />
            </div>


            <div class="form-group  col-md-15">
                <textarea class="form-control" rows="3" type="text" name="ShortDescription" placeholder="Короткое описание"></textarea>
            </div>

            <div class="form-group col-md-15">
                <textarea name="MainDescription" id="MainDescription" rows="10" cols="80"></textarea>
            </div>

            <div class="form-group  col-md-15">
                <input name="Image" type="file" class="form-control" />
            </div>

            <div class="checkbox">
                <label><input type="checkbox" name="Available" value="true"> Доступность</label>
            </div>

            <label>Направление события:</label>
            <div>
                <select name="Direction">
                    <option>выбирете направление</option>
                    <option value="Design">Design</option>
                    <option value="Programming">Programming</option>
                    <option value="English">English</option>
                    <option value="Management">Management</option>
                    <option value="Game">Game</option>
                </select>
                <div class="select-arrow"></div>
            </div>



            <div class="panel-body">
                <button type="submit" id="submit" style="width:1600px;"
                        class="btn btn-success"
                        back>
                    Отправить
                </button>
            </div>


        </form>
    </div>

    <script>
        CKEDITOR.replace('MainDescription');
    </script>

</body>
</html>
